{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "helpers:pinGitHubActionDigests"
  ],
  "labels": ["dependencies"],
  "allowedCommands": [
    "^go work sync$",
    "^go list -m -json | jq '.Dir' | xargs -L1 -I'{}' sh -c 'cd {} && go mod tidy'$"
  ],
  "postUpgradeTasks": {
    "commands": [
      "go work sync",
      "go list -m -json | jq '.Dir' | xargs -L1 -I'{}' sh -c 'cd {} && go mod tidy'"
    ],
    "fileFilters": ["**/go.mod", "**/go.sum"],
    "executionMode": "branch"
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/^versions.go$/"],
      "datasourceTemplate": "go",
      "matchStrings": [
          "// renovate: (?<depName>.*)\\s+[^=]+=\\s*\"(?<currentValue>[^\"]*)\""
      ]
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["go"],
      "groupName": "Go dependencies"
    },
    {
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions"
    }
  ]
}
