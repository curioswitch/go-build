{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["helpers:pinGitHubActionDigests"],
  "platformCommit": "enabled",
  "labels": ["dependencies"],
  "prHourlyLimit": 0,
  "postUpgradeTasks": {
    "commands": [
      "go work sync",
      "go list -m -json | jq '.Dir' | xargs -L1 -I'{}' sh -c 'cd {} && go mod tidy'"
    ],
    "fileFilters": ["**/go.mod", "**/go.sum"],
    "executionMode": "branch"
  },
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/(^|/)versions.go$/"],
      "datasourceTemplate": "go",
      "matchStrings": [
        "// renovate: (?<depName>.*)\\s+[^=]+=\\s*\"(?<currentValue>[^\"]*)\""
      ]
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/^go.work$/"],
      "datasourceTemplate": "golang-version",
      "depNameTemplate": "go",
      "depTypeTemplate": "golang",
      "matchStrings": ["go (?<currentValue>[^\\s]+)"]
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions"
    },
    {
      "matchDatasources": ["golang-version"],
      "groupName": "Go"
    },
    {
      "matchCategories": ["golang"],
      "matchDatasources": ["go"],
      "groupName": "Go dependencies"
    },
    {
      "matchManagers": ["regex"],
      "matchDatasources": ["go"],
      "groupName": "Go tools"
    }
  ]
}
